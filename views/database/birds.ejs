<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Our Birds</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <img src="/images/birds-flying2.png" width="200" height="200" alt="Birds Flying" class="flying-birds">
    <div class="page-body main-page db-page">
        <h1 class="page-title">Ubird Database</h1>
        <% birdDB.forEach((species) => { %>
            <% let populated = false %>
            <h2 class="species"><%= species %></h2>
            <% users.forEach((user) => { %>
                <% user.birds.forEach((bird) => { %>
                    <% if (bird.name.toLowerCase() === species.toLowerCase()) { %>
                        <div class="user-encounter">
                            <% populated = true %>
                            <p>Seen or attempted by <a href="the-flock/<%= user._id %>"><%= user.username %></a> at <%= bird.location %> on <%= bird.date.toISOString().split('T')[0] %>.</p>
                            <% if (bird.rating !== 'blank') { %>
                                <img src="<%= bird.rating === '5' ? '/images/five-stars.png' : bird.rating === '4.5' ? '/images/four-half-stars.png' : bird.rating === '4' ? '/images/four-stars.png' : bird.rating === '3.5' ? '/images/three-half-stars.png' : bird.rating === '3' ? '/images/three-stars.png' : bird.rating === '2.5' ? '/images/two-half-stars.png' : bird.rating === '2' ? '/images/two-stars.png' : bird.rating === '1.5' ? '/images/one-half-stars.png' : bird.rating === '1' ? '/images/one-stars.png' : bird.rating === '0.5' ? '/images/half-star.png' : '/images/no-stars.png' %>" width="40" height="10" alt="User Rating">
                            <% } %>
                        </div>
                    <% } %>
                <% }) %>
            <% }) %>
            <% if (!populated) { %>
                <p>No sightings or attempts yet.</p>
            <% } %>
            <hr>
        <% }) %>
    </div>
</body>
</html>